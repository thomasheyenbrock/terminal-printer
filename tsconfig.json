{
  "compilerOptions": {
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es5",
    "module": "umd",
    "sourceMap": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "lib": ["ESNext"],
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["jest", "node"]
  },
  "exclude": ["node_modules"]
}
